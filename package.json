{
  "name": "tz-path",
  "version": "1.0.0",
  "description": "Dotted path resolve for typescript",
  "keywords": [
    "Typescript",
    "dottedpath",
    "dotpath",
    "vite",
    "vitest",
    "dot syntax",
    "get",
    "set",
    "deep",
    "nesting",
    "update",
    "change",
    "typesafe"
  ],
  "homepage": "https://www.github.com/Mimikkk/z-path",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mimikkk/z-path.git"
  },
  "license": "MIT",
  "author": "Daniel Zdancewicz <zdancewicz.daniel@gmail.com>",
  "type": "module",
  "exports": {
    "require": "./build/z-path.cjs",
    "types": "./build/z-path.d.ts",
    "default": "./build/z-path.esm.js"
  },
  "main": "./build/z-path.cjs",
  "unpkg": "./build/z-path.umd.js",
  "module": "./build/z-path.esm.js",
  "source": "src/z-path.ts",
  "types": "./build/z-path.d.ts",
  "files": [
    "build",
    "src/",
    "tsconfig.json",
    "tsconfig.vite.json",
    "vite.config.ts"
  ],
  "scripts": {
    "build": "pnpm run build:clear && concurrently -n build: 'pnpm:build:*' -c=bgBlue.bold,green.bold,red.bold",
    "build:clear": "rimraf build",
    "build:lib": "vite build",
    "build:tsc": "tsc --project tsconfig.library.json",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vitest": "^1.3.1"
  },
  "bugs": {
    "url": "https://github.com/Mimikkk/z-path/issues"
  }
}
