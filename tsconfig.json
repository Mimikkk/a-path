{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "outDir": "build",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src",
    "readme.md"
  ],
  "references": [
    {
      "path": "./tsconfig.vite.json"
    }
  ]
}
